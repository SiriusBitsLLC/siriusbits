---
import "../styles/global.css";
import EnhancedFooter from "../components/EnhancedFooter.astro";
import Icon from "../components/Icon.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title,
  description = "SiriusBits Consulting - Strategic data and technology consulting services",
  image = "/siriusbits-og-image.png",
  canonicalURL,
} = Astro.props;

// Get the current URL for canonical link and OG tags
// Handle both absolute URLs and relative paths
let pageURL;
try {
  // If a canonicalURL is provided or we can construct one from Astro.site
  if (canonicalURL) {
    pageURL = canonicalURL.toString();
  } else if (Astro.site) {
    pageURL = new URL(Astro.url.pathname, Astro.site).toString();
  } else {
    // Fallback to relative path if no site URL is available
    pageURL = Astro.url.pathname;
  }
} catch (error) {
  // Fallback to pathname if URL construction fails
  pageURL = Astro.url.pathname;
}
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | SiriusBits</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Canonical URL -->
    <link rel="canonical" href={pageURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={pageURL} />
    <meta property="og:title" content={`${title} | SiriusBits`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={pageURL} />
    <meta property="twitter:title" content={`${title} | SiriusBits`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
  </head>
  <body>
    <header>
      <div class="container">
        <nav>
          <div class="logo">
            <a href="/">
              <img
                src="/siriusbits-logo-name.png"
                alt="SiriusBits"
                class="logo-full"
              />
              <img
                src="/siriusbits-brand-mark.png"
                alt="SiriusBits"
                class="logo-mark"
              />
            </a>
          </div>
          <ul class="nav-links">
            <li>
              <a href="/" class="nav-item"
                ><Icon name="arrow-right" size={16} class="nav-icon" /> Home</a>
            </li>
            <li>
              <a href="/skills-experience" class="nav-item"
                ><Icon name="data-management" size={16} class="nav-icon" /> Skills
                & Experience</a>
            </li>
            <li>
              <a href="/services" class="nav-item"
                ><Icon name="strategy" size={16} class="nav-icon" /> Services</a>
            </li>
            <li>
              <a href="/resources" class="nav-item"
                ><Icon name="article" size={16} class="nav-icon" /> Resources</a>
            </li>
            <li>
              <a href="/uses" class="nav-item"
                ><Icon name="web-dev" size={16} class="nav-icon" /> Uses</a>
            </li>
            <li>
              <a href="/contact" class="nav-item"
                ><Icon name="email" size={16} class="nav-icon" /> Contact</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <EnhancedFooter />

    <style>
      /* Base layout specific styles */

      header {
        padding: 1.5rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      }

      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo a {
        text-decoration: none;
        display: flex;
        align-items: center;
      }

      .logo-full {
        height: 40px;
        width: auto;
      }

      .logo-mark {
        display: none;
        height: 40px;
        width: auto;
      }

      .nav-links {
        display: flex;
        list-style: none;
        gap: 2rem;
      }

      .nav-links a {
        text-decoration: none;
        color: var(--neutral-black);
        font-weight: 500;
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .nav-icon {
        opacity: 0;
        transform: translateX(-5px);
        transition: all 0.2s ease;
        color: var(--primary-purple);
      }

      .nav-links a:hover {
        color: var(--primary-purple);
      }

      .nav-links a:hover .nav-icon {
        opacity: 1;
        transform: translateX(0);
      }

      main {
        min-height: calc(100vh - 160px);
        padding: 2rem 0;
      }

      footer {
        padding: 2rem 0;
        background-color: #f9f9f9;
        text-align: center;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
      }

      @media (max-width: 768px) {
        .nav-links {
          display: none;
        }

        .logo-full {
          display: none;
        }

        .logo-mark {
          display: block;
        }
      }
    </style>
  </body>
</html>
