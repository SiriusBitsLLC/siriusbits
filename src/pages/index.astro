---
import BaseLayout from "../layouts/BaseLayout.astro";
import ConsultingServices from "../components/ConsultingServices.astro";
import FeaturedProjects from "../components/FeaturedProjects.astro";
import FeaturedArticles from "../components/FeaturedArticles.astro";
import "../styles/home.css";
---

<BaseLayout title="Home">
  <section class="hero">
    <div class="container">
      <h1>Welcome to SiriusBits Consulting</h1>
      <p class="subtitle">
        Strategic data and technology consulting services to help organizations
        leverage their data assets and technology investments for maximum
        business value.
      </p>
    </div>
  </section>

  <section class="services-section">
    <div class="container">
      <h2>Consulting Services</h2>
      <p class="section-intro">
        Our expertise spans across various domains of data and technology
        consulting, helping businesses transform their operations and achieve
        strategic goals.
      </p>
      <ConsultingServices />
      <div class="section-cta">
        <a href="/services" class="btn-secondary">View All Services →</a>
      </div>
    </div>
  </section>

  <section class="featured-projects">
    <div class="container">
      <h2>Featured Projects</h2>
      <p class="section-intro">
        Explore some of our recent projects and success stories that showcase
        our expertise and approach.
      </p>
      <FeaturedProjects />
      <div class="section-cta">
        <a href="/projects" class="btn-secondary">View All Projects →</a>
      </div>
    </div>
  </section>

  <section class="featured-articles">
    <div class="container">
      <h2>Featured Articles</h2>
      <p class="section-intro">
        Stay updated with our latest insights, guides, and thought leadership on
        data strategy and technology trends.
      </p>
      <FeaturedArticles />
      <div class="section-cta">
        <a href="/blog" class="btn-secondary">View All Articles →</a>
      </div>
    </div>
  </section>

  <section class="contact-cta">
    <div class="container">
      <h2>Get in Touch</h2>
      <p>
        Ready to transform your data strategy? Let's discuss how SiriusBits can
        help with your next project.
      </p>
      <a href="/contact" class="cta-button">Contact Now</a>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 5rem 0;
    background-color: #f9f9f9;
  }

  h1 {
    font-size: 2.8rem;
    color: var(--primary-purple);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--neutral-black);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  section {
    margin-bottom: 5rem;
    padding: 2rem 0;
  }

  h2 {
    font-size: 2.2rem;
    margin-bottom: 1rem;
    color: var(--primary-purple);
  }

  .section-intro {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
    max-width: 800px;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .section-cta {
    margin-top: 2rem;
    text-align: center;
  }

  .btn-secondary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 2px solid var(--primary-purple);
    color: var(--primary-purple);
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    background-color: var(--primary-purple);
    color: white;
  }

  .contact-cta {
    text-align: center;
    padding: 4rem;
    background-color: #f9f9f9;
    border-radius: 8px;
  }

  .cta-button {
    display: inline-block;
    margin-top: 1.5rem;
    padding: 0.75rem 2rem;
    background-color: var(--primary-purple);
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: #8a41d0;
  }

  .services-section {
    background-color: white;
  }

  .featured-projects {
    background-color: #f9f9f9;
  }

  .featured-articles {
    background-color: white;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.2rem;
    }

    h2 {
      font-size: 1.8rem;
    }

    .section-intro {
      font-size: 1rem;
    }

    .hero {
      padding: 3rem 0;
    }
  }
</style>
