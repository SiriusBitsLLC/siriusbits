---
import BaseLayout from "../layouts/BaseLayout.astro";
import SkillsMatrix from "../components/SkillsMatrix.svelte";
import { skills } from "../data/skills";
import { roles } from "../data/roles";
import "../styles/home.css";
---

<BaseLayout title="Home">
  <div class="container">
    <section class="hero">
      <h1>Welcome to SiriusBits Consulting</h1>
      <p class="subtitle">Strategic data and technology consulting services</p>
    </section>

    <section class="career-summary">
      <h2>Career Summary</h2>
      <div class="summary-content">
        <p>
          With over a decade of experience in data strategy, enterprise
          architecture, and digital transformation, SiriusBits Consulting
          provides expert guidance to help organizations leverage their data
          assets and technology investments for maximum business value.
        </p>
        <p>
          Specializing in data governance, analytics & insights, and technology
          strategy, we've helped companies across various industries establish
          robust data practices, implement modern data stacks, and develop
          actionable insights that drive business decisions.
        </p>
      </div>
    </section>

    <section class="skills-section">
      <h2>Skills Matrix</h2>
      <SkillsMatrix skills={skills} client:visible />
    </section>

    <section class="featured-experience">
      <h2>Featured Experience</h2>
      <div class="experience-cards">
        {
          roles.map((role) => (
            <div class="experience-card">
              <h3>{role.title}</h3>
              <p class="company">{role.company}</p>
              <p class="dates">
                {new Date(role.startDate || "").toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                })}{" "}
                -
                {role.endDate
                  ? new Date(role.endDate).toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "short",
                    })
                  : "Present"}
              </p>
              <p class="summary">{role.summary}</p>
              <a href="/timeline" class="learn-more">
                View Full Timeline â†’
              </a>
            </div>
          ))
        }
      </div>
    </section>

    <section class="contact-cta">
      <h2>Get in Touch</h2>
      <p>
        Ready to transform your data strategy? Let's discuss how SiriusBits can
        help with your next project.
      </p>
      <a href="/contact" class="cta-button">Contact Now</a>
    </section>
  </div>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--primary-purple);
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--neutral-black);
    max-width: 600px;
    margin: 0 auto;
  }

  section {
    margin-bottom: 4rem;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--primary-purple);
  }

  .contact-cta {
    text-align: center;
    padding: 3rem;
    background-color: #f9f9f9;
    border-radius: 8px;
  }

  .cta-button {
    display: inline-block;
    margin-top: 1.5rem;
    padding: 0.75rem 2rem;
    background-color: var(--primary-purple);
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: #8a41d0;
  }
</style>
