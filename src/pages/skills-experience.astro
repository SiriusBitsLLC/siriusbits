---
import BaseLayout from "../layouts/BaseLayout.astro";
import EnhancedSkillsMatrix from "../components/EnhancedSkillsMatrix.svelte";
import EnhancedExperienceTimeline from "../components/EnhancedExperienceTimeline.svelte";
import EnhancedFilterSkills from "../components/EnhancedFilterSkills.svelte";
import Button from "../components/Button.astro";
import Icon from "../components/Icon.astro";
import { skills } from "../data/skills";
import { duties } from "../data/duties";
import { activities } from "../data/activities";
import { roles } from "../data/roles";
import { companies } from "../data/companies";
---

<BaseLayout title="Skills & Experience | SiriusBits Consulting">
  <div class="skills-experience-container">
    <section class="page-header">
      <div class="header-content container">
        <h1>Skills & Experience</h1>
        <p class="subtitle">
          Expertise across business strategy, data architecture, and technology
          leadership
        </p>
        <div class="header-actions">
          <Button href="/contact" variant="primary">Discuss Your Project</Button
          >
          <Button href="/portfolio" variant="outline">View Portfolio</Button>
        </div>
      </div>
      <div class="header-background">
        <div class="gradient-overlay"></div>
        <div class="animated-shapes">
          <div class="shape shape-1"></div>
          <div class="shape shape-2"></div>
          <div class="shape shape-3"></div>
        </div>
      </div>
    </section>

    <section class="intro-section">
      <div class="container">
        <div class="summary-content">
          <p>
            With over a decade of experience in data strategy, enterprise
            architecture, and digital transformation, SiriusBits Consulting
            provides expert guidance to help organizations leverage their data
            assets and technology investments for maximum business value.
          </p>
          <p>
            Specializing in data governance, analytics & insights, and
            technology strategy, we've helped companies across various
            industries establish robust data practices, implement modern data
            stacks, and develop actionable insights that drive business
            decisions.
          </p>
        </div>
      </div>
    </section>

    <section class="skills-section">
      <div class="container">
        <div class="section-header">
          <h2>Core Skills & Proficiency</h2>
          <p class="section-description">
            Specialized expertise developed over years of consulting and
            enterprise experience
          </p>
        </div>
        <EnhancedSkillsMatrix client:load skills={skills} />
      </div>
    </section>

    <section class="experience-section">
      <div class="container">
        <div class="section-header">
          <h2>Professional Journey</h2>
          <p class="section-description">
            Career highlights and key roles across consulting and corporate
            environments
          </p>
        </div>
        <EnhancedExperienceTimeline
          client:load
          roles={roles}
          companies={companies}
        />
      </div>
    </section>

    <section class="filter-section">
      <div class="container">
        <div class="section-header">
          <h2>Experience Explorer</h2>
          <p class="section-description">
            Filter professional experience by specific skills to see relevant
            projects and responsibilities
          </p>
        </div>
        <EnhancedFilterSkills
          client:load
          skills={skills}
          duties={duties}
          activities={activities}
        />
      </div>
    </section>

    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Ready to collaborate?</h2>
          <p>
            Let's discuss how my skills and experience can help your
            organization achieve its goals.
          </p>
          <div class="cta-buttons">
            <Button href="/contact" variant="primary">Contact Me</Button>
            <Button href="/services" variant="secondary">View Services</Button>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  :root {
    --color-primary: var(--primary-purple, #9b51e0);
    --color-accent: var(--accent-color, #3498db);
    --neutral-black: #333;
    --neutral-gray: #666;
  }

  .skills-experience-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem 4rem;
  }

  .page-header {
    position: relative;
    padding: 6rem 0 4rem;
    margin-bottom: 4rem;
    overflow: hidden;
    border-radius: 0 0 30px 30px;
  }

  .header-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .header-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    background-color: #f9f9f9;
  }

  .gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(155, 81, 224, 0.1) 0%,
      rgba(52, 152, 219, 0.1) 100%
    );
  }

  .animated-shapes {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      rgba(155, 81, 224, 0.2),
      rgba(52, 152, 219, 0.2)
    );
    animation: float 15s infinite ease-in-out;
  }

  .shape-1 {
    width: 300px;
    height: 300px;
    top: -150px;
    right: -100px;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 200px;
    height: 200px;
    bottom: -100px;
    left: -50px;
    animation-delay: 5s;
  }

  .shape-3 {
    width: 150px;
    height: 150px;
    bottom: 50px;
    right: 30%;
    animation-delay: 2s;
  }

  @keyframes float {
    0% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
    100% {
      transform: translateY(0) rotate(0deg);
    }
  }

  h1 {
    color: var(--color-primary);
    margin-bottom: 1rem;
    font-size: 3rem;
    font-weight: 700;
  }

  .subtitle {
    color: var(--neutral-gray);
    font-size: 1.25rem;
    line-height: 1.5;
    margin-bottom: 2rem;
  }

  .header-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .intro-section {
    padding: 2rem 0 4rem;
  }

  .summary-content {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .summary-content p {
    margin-bottom: 1.5rem;
    color: var(--neutral-black);
    font-size: 1.1rem;
  }

  section {
    margin-bottom: 5rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  h2 {
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    font-size: 2rem;
    font-weight: 700;
  }

  .section-description {
    color: var(--neutral-gray);
    font-size: 1.1rem;
    max-width: 700px;
    margin: 0 auto;
  }

  .skills-section,
  .experience-section,
  .filter-section {
    padding: 2rem 0;
  }

  .cta-section {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(
      90deg,
      var(--color-primary),
      var(--color-accent)
    );
  }

  .cta-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-section h2 {
    margin-bottom: 1rem;
  }

  .cta-section p {
    color: var(--neutral-gray);
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 4rem 0 3rem;
      margin-bottom: 3rem;
    }

    h1 {
      font-size: 2.25rem;
    }

    .subtitle {
      font-size: 1.1rem;
    }

    section {
      margin-bottom: 3rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    .section-description {
      font-size: 1rem;
    }

    .cta-section {
      padding: 2rem 1.5rem;
    }
  }
</style>
