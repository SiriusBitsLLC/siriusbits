---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';
---

<BaseLayout title="Talks | SiriusBits">
  <section class="talks-header">
    <div class="container">
      <h1>Talks</h1>
      <p class="subtitle">Presentations and speaking engagements</p>
    </div>
  </section>
  
  <section class="container">
    <div class="talks-content">
      <p class="coming-soon">Talks content coming soon. Check back later for updates!</p>
    </div>
  </section>
</BaseLayout>

<style>
  .talks-header {
    background-color: #f9f9f9;
    padding: 4rem 0 2rem;
    text-align: center;
    margin-bottom: 3rem;
  }

  .talks-header h1 {
    color: var(--color-primary);
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .talks-header .subtitle {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    max-width: 800px;
    margin: 0 auto;
  }
  
  .talks-content {
    background-color: #fff;
    border-radius: 10px;
    padding: 3rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    text-align: center;
    margin: 3rem 0;
  }
  
  .coming-soon {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
  }
  
  @media (max-width: 768px) {
    .talks-header {
      padding: 3rem 0 1.5rem;
    }
    
    .talks-header h1 {
      font-size: 2rem;
    }
    
    .talks-content {
      padding: 2rem;
    }
  }
</style>
