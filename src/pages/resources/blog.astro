---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icon.astro';
---

<BaseLayout title="Blog | SiriusBits">
  <section class="blog-header">
    <div class="container">
      <h1>Blog</h1>
      <p class="subtitle">Articles and insights on data, technology, and consulting</p>
    </div>
  </section>
  
  <section class="container">
    <div class="blog-content">
      <p class="coming-soon">Blog content coming soon. Check back later for updates!</p>
    </div>
  </section>
</BaseLayout>

<style>
  .blog-header {
    background-color: #f9f9f9;
    padding: 4rem 0 2rem;
    text-align: center;
    margin-bottom: 3rem;
  }

  .blog-header h1 {
    color: var(--color-primary);
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .blog-header .subtitle {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    max-width: 800px;
    margin: 0 auto;
  }
  
  .blog-content {
    background-color: #fff;
    border-radius: 10px;
    padding: 3rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    text-align: center;
    margin: 3rem 0;
  }
  
  .coming-soon {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
  }
  
  @media (max-width: 768px) {
    .blog-header {
      padding: 3rem 0 1.5rem;
    }
    
    .blog-header h1 {
      font-size: 2rem;
    }
    
    .blog-content {
      padding: 2rem;
    }
  }
</style>
