---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Thank You">
  <div class="container">
    <h1>Thank You!</h1>
    <p class="subtitle">Your message has been received. We'll be in touch as soon as possible.</p>
    <a href="/" class="submit-button">Return Home</a>
  </div>
</BaseLayout>

<style>
  h1 {
    font-size: 2.5rem;
    color: var(--primary-purple);
    margin-bottom: 1rem;
  }
  .subtitle {
    font-size: 1.25rem;
    color: var(--neutral-black);
    margin-bottom: 2rem;
  }
  .container {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    padding: 3rem 1rem;
  }
  .submit-button {
    display: inline-block;
    padding: 0.75rem 2rem;
    background-color: var(--primary-purple);
    color: white;
    border: none;
    border-radius: 4px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
    margin-top: 2rem;
  }
  .submit-button:hover {
    background-color: #8A41D0;
  }
</style>
